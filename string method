# .lstrip()
# define a string with leading whitespace characters (spaces, tabs).
# str1 = "   hello     "
# str2 = str1.lstrip()
# print(str2)  # Output: "hello     "


# .rstrip()
# define a string with trailing whitespace characters (spaces, tabs).
# str1 = "   hello     "
# str2 = str1.rstrip()
# print(str2)  # Output: "   hello"

# .strip()
# define a string with leading and trailing whitespace characters (spaces, tabs).
# str1 = "   hello     "
# str2 = str1.strip()
# print(str2)  # Output: "hello"

# str1.strip("h")  # Output: "   ello     "


